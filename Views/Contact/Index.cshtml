





@model CodeClinic.ViewModel.ContactViewModel

<partial name="_breadcrumbs" model="Model.BreadCrumb"/>
<!-- Map Section -->
<section class="map-section">
    <div class="auto-container">
        <div class="map-outer">
            <div class="map-canvas"
                 data-zoom="12"
                 data-lat="40.4093° N"
                 data-lng="49.8671° E"
                 data-type="roadmap"
                 data-hue="#ffc400"
                 data-title="Baki"
                 data-icon-path="/Uploads//icons/map-marker.png"
                 data-content="Melbourne VIC 3000, Australia<br><a href='mailto:baharshs@code.edu.az'>baharshs@code.edu.az</a>">
            </div>
        </div>
    </div>
</section>
<!-- End Map Section -->

@section Javascript{

    <!--Google Map APi Key-->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaaCBm4FEmgKs5cfVrh3JYue3Chj1kJMw"></script>
    <script src="js/map-script.js"></script>
    <!--End Google Map APi-->
}


<!-- Contact Section -->
<section class="contact-section" id="contact">
    <div class="small-container">
        <div class="sec-title text-center">
            <span class="sub-title">Kontakt</span>
            <h2>Mesajinizi Yazin!</h2>
            <span class="divider"></span>
        </div>

        <!-- Contact box -->
        <div class="contact-box">
            <div class="row">
                @foreach (var item in Model.SettingLasts)
                {<div class="contact-info-block col-lg-4 col-md-6 col-sm-12">
    <div class="inner">
        <span class="icon flaticon-worldwide"></span>
        <h4><strong>@item.Title</strong></h4>
        <p>@item.Text</p>
    </div>
</div>

                }
               
            </div>
        </div>

        <!-- Form box -->
        <div class="form-box">
            <div class="contact-form">
                <form asp-action="Index" method="post" >
                    <div class="form-group">
                        <div class="response"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutPasient.Name">Ad</label>
                        <input type="text" asp-for="AboutPasient.Name"  class="form-control" required="">
                        <span asp-validation-for="AboutPasient.Name" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="AboutPasient.Email">Email</label>
                        <input type="text" asp-for="AboutPasient.Email" class="form-control" required="">
                        <span asp-validation-for="AboutPasient.Email" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="AboutPasient.Telephone">Telefon</label>
                        <input type="text" asp-for="AboutPasient.Telephone"  class="form-control" required="">
                        <span asp-validation-for="AboutPasient.Telephone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AboutPasient.About">Pasient Haqqında</label>
                        <textarea asp-for="AboutPasient.About" class="form-control" required=""></textarea>
                        <span asp-validation-for="AboutPasient.About" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button class="theme-btn btn-style-one" type="submit" name="submit-form"><span class="btn-title">Məlumatı Göndər</span></button>
                    </div>
                </form>
            </div>
    </div>
</section>
<!--End Contact Section -->
<partial name="_clients" model="Model.Clients"/>