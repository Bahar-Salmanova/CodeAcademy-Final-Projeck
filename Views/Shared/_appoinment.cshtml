@model  CodeClinic.Models.GetAppointment


<!-- Appointment Section -->
<section class="appointment-section">
    <div class="image-layer" style="background-image: url(/Uploads//background/2.jpg);"></div>
    <div class="auto-container">
        <div class="row">
            <!-- Content Column -->
            <div class="content-column col-lg-6 col-md-12 col-sm-12">
                <div class="inner-column">
                    <span class="title">@Model.About</span>
                    <h2>@Model.Title</h2>
                    <div class="number">Bizə zəng edin: <strong>@Model.Call</strong></div>
                    <a asp-controller="home" asp-action="Appointment" class="theme-btn btn-style-three"><span class="btn-title">Randevu Al</span></a>
                </div>
            </div>
            <div class="image-column col-lg-6 col-md-12 col-sm-12">
                <figure class="image"><img src="~/Uploads/resource/@Model.Photo" alt=""></figure>
            </div>
        </div>

        <div class="fun-fact-section">
            <div class="row">

                <!--Column-->
                <div class="counter-column col-lg-3 col-md-6 col-sm-12 wow fadeInUp">
                    <div class="count-box">
                        <div class="icon-box"><span class="icon flaticon-user-experience"></span></div>
                        <h4 class="counter-title">İllərin Təcrübəsi</h4>
                        <span class="count-text" data-speed="3000" data-stop="25">0</span>
                    </div>
                </div>

                <!--Column-->
                <div class="counter-column col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="400ms">
                    <div class="count-box">
                        <div class="icon-box"><span class="icon flaticon-team"></span></div>
                        <h4 class="counter-title">
                            Tibbi Xüsusiyyətlər
                        </h4>
                        <span class="count-text" data-speed="3000" data-stop="470">0</span>
                    </div>
                </div>

                <!--Column-->
                <div class="counter-column col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="800ms">
                    <div class="count-box">
                        <div class="icon-box"><span class="icon flaticon-hospital"></span></div>
                        <h4 class="counter-title">Tibbi Heyətimiz</h4>
                        <span class="count-text" data-speed="3000" data-stop="169">0</span>
                    </div>
                </div>

                <!--Column-->
                <div class="counter-column col-lg-3 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay="1200ms">
                    <div class="count-box">
                        <div class="icon-box"><span class="icon flaticon-add-friend"></span></div>
                        <h4 class="counter-title">Xoşbəxt Pasientlər</h4>
                        <span class="count-text" data-speed="3000" data-stop="9036">0</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Appointment Section -->
